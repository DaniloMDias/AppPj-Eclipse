<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polijunior.apppj"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/SemBarraTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InstitucionalActivity"
            android:label="@string/title_activity_institucional" >
        </activity>
        <activity
            android:name=".CadastroProjetosActivity"
            android:label="@string/title_activity_cadastro_projetos"
            android:parentActivityName=".InstitucionalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polijunior.apppj.InstitucionalActivity" />
        </activity>
        <activity
            android:name=".CadastroMembrosActivity"
            android:label="@string/title_activity_cadastro_membros"
            android:parentActivityName=".InstitucionalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polijunior.apppj.InstitucionalActivity" />
        </activity>
        <activity
            android:name=".ListaProjetosActivity"
            android:label="@string/title_activity_lista_projetos"
            android:parentActivityName=".InstitucionalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polijunior.apppj.InstitucionalActivity" />
        </activity>
        <activity
            android:name=".ListaMembrosActivity"
            android:label="@string/title_activity_lista_membros"
            android:parentActivityName=".InstitucionalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polijunior.apppj.InstitucionalActivity" />
        </activity>
    </application>

</manifest>
